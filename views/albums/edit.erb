<div class="content">

  <h2>Edit Album</h2>

  <form action="/albums/<%= @album.id %>" method="post">
    <input type="hidden" name="_method" value="put">
    <label for="name">Album Name:</label>
    <input type="text" name="name" value="<%= @album.name %>"><br>
    <label for="name">Genre:</label>
    <input type="text" name="name" value="<%= @album.genre %>"><br>
    <label for="name">Price Buying:</label>
    <input type="text" name="name" value="<%= @album.price_buying %>"><br>
    <label for="name">Price Selling:</label>
    <input type="text" name="name" value="<%= @album.price_selling %>"><br>
    <label for="name">Qty:</label>
    <input type="text" name="name" value="<%= @album.price_quantity %>"><br>
    <input type='submit' value="Update Album">
  </form>

</div>
    
